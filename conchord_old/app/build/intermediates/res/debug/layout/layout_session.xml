<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightCoral" >

    <TextView
        android:id="@+id/textViewMySessionID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:hint="he"
        android:textColor="@color/Black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewNTPplayTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewMySessionID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="ntp play time"
        android:textColor="@color/Black"
        android:textSize="15dp" />
    
    <TextView
        android:id="@+id/textViewSnapshotNTPtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewNTPplayTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="snapshot ntp"
        android:textColor="@color/Black"
        android:textSize="15dp" />
    
    <TextView
        android:id="@+id/textViewRequesttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewSnapshotNTPtime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="request time"
        android:textColor="@color/Black"
        android:textSize="15dp" />
    
    <TextView
        android:id="@+id/textViewRoundtripTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewRequesttime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="roundtrip time"
        android:textColor="@color/Black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textViewSnapshotLocalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewRoundtripTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="snapshot local guess : "
        android:textColor="@color/Black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textViewRemainingLocalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewSnapshotLocalTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="remaining local time"
        android:textColor="@color/Black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textViewStartTimeInMillis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewRemainingLocalTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="local start time"
        android:textColor="@color/Black"
        android:textSize="15dp" />

</RelativeLayout><!-- From: file:/C:/Users/NATI/workspace/conchord/conchord_old/app/src/main/res/layout/layout_session.xml -->