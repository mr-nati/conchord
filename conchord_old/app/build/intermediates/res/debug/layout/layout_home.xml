<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightSteelBlue" >

    <Button
        android:id="@+id/buttonCreateSession"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:background="@color/Azure"
        android:text="Create Session"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextSessionName"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_above="@id/buttonCreateSession"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="#00FF0000"
        android:gravity="center_horizontal|center_vertical"
        android:hint="enter a unique session name"
        android:text="aaa"
        android:textColor="@color/Black"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/editTextJoinSessionName"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_below="@id/buttonCreateSession"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="#00FF0000"
        android:gravity="center_horizontal|center_vertical"
        android:hint="enter a session name to join"
        android:text="aaa"
        android:textColor="@color/Black"
        android:textSize="15dp" />

    <Button
        android:id="@+id/buttonJoinSession"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_below="@id/editTextJoinSessionName"
        android:layout_centerHorizontal="true"
        android:background="@color/Azure"
        android:text="Join Session"
        android:textStyle="bold" />

</RelativeLayout><!-- From: file:/C:/Users/NATI/workspace/conchord/conchord_old/app/src/main/res/layout/layout_home.xml -->